{
  "_rule": "5 狀態對齊 ESP32。melody 欄位可選，由 notify.sh 發送到 claude/melody topic。",
  "idle":       {"r": 255, "g": 13,  "b": 0,   "pattern": "pulse",   "times": 999, "interval": 3.0, "melody": "minimal_double"},
  "running":    {"r": 0,   "g": 255, "b": 0,   "pattern": "pulse",   "times": 999, "interval": 2.0, "melody": "short_running"},
  "waiting":    {"r": 255, "g": 0,   "b": 0,   "pattern": "blink",   "times": 999, "interval": 0.3, "melody": "short_waiting"},
  "completed":  {"r": 0,   "g": 0,   "b": 0,   "pattern": "rainbow", "times": 3,   "interval": 1.0, "melody": "zelda_secret"},
  "error":      {"r": 255, "g": 0,   "b": 0,   "pattern": "solid",   "duration": 5, "melody": "short_error"},
  "off":        {"r": 0,   "g": 0,   "b": 0,   "pattern": "solid",   "duration": 1}
}
